@model RailwayReservation.Models.tblUser
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <br />
    <br />
    <br />
    <br />
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="background-color:ghostwhite">
            <br />
            <h2 class="text-center">Sign Up</h2>
            <br />
            <div class="col">
                <center>
                    <img src="~/Images/AppImage/register.png" style="height:150px; width:150px" />
                </center>
            </div>
            <br />
            <br />
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "ontrol-label col-md-12" })
                    <div class="input-group">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "ontrol-label col-md-12" })
                    <div class="input-group">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Sign Up" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-10">
                    Already have an account?
                    @Html.ActionLink("Login here", "Login", "Account")
                </div>
                <br />
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
}

