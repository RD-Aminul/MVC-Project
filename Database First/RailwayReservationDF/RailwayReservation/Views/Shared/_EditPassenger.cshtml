@model RailwayReservation.Models.ViewModels.PassengerViewModel

@*@{
    ViewBag.Title = " | Insert";
    Layout = null;
}*@

@using (Html.BeginForm("Insert", "Passenger", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="col-md-12">
    @Html.HiddenFor(Model => Model.PassengerID)
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <h2>Edit Passenger</h2>
    <div class="form-group mb-3">
        @Html.LabelFor(model => model.PassengerName, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.PassengerName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PassengerName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.PassengerEmail, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.PassengerEmail, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PassengerEmail, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.PassengerPhone, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.PassengerPhone, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PassengerPhone, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3 position-relative">
        @Html.LabelFor(model => model.JourneyDate, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.JourneyDate, new { htmlAttributes = new { @class = "form-control datetimepicker" } })
        @Html.ValidationMessageFor(model => model.JourneyDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.TrainNo, htmlAttributes: new { @class = "form-label" })
        @Html.DropDownListFor(model => model.TrainNo, new SelectList(ViewBag.Trains, "TrainNo", "TrainName"), "Select Train", new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.TrainNo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.RouteID, htmlAttributes: new { @class = "form-label" })
        @Html.DropDownListFor(model => model.RouteID, new SelectList(ViewBag.Routes, "RouteID", "RouteName"), "Select Route", new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.RouteID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.ClassID, htmlAttributes: new { @class = "form-label" })
        @Html.DropDownListFor(model => model.ClassID, new SelectList(ViewBag.Classes, "ClassID", "ClassName"), "Select Class", new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.ClassID, "", new { @class = "text-danger" })
    </div>

    @*<div class="form-group mb-3">
            @Html.LabelFor(model => model.Fare, htmlAttributes: new { @class = "form-label" })
            @Html.DropDownListFor(model => model.Fare, new SelectList(ViewBag.Classes, "ClassID", "Fare"), "Select Fare", new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Fare, "", new { @class = "text-danger" })
        </div>*@

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.ImageUrl, htmlAttributes: new { @class = "form-label" })<br />
        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.ImageName" height="100" width="100" class="change_Edit" />
        <input type="file" id="ImageChange1" name="ImageFile" class="form-control ImageChange" />
        @Html.ValidationMessageFor(model => model.ImageUrl, "", new { htmlAttributes = new { @class = "text-danger" } })
    </div>

    <div class="form-group mb-3 text-center">
        <input type="submit" value="Update" class="btn btn-success" />
    </div>
</div>
}

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/CustomScript.js"></script>

<script>
    $(function () {
        $('.ImageChange').change(function () {
            var input = this;
            if (input.files) {
                var rdr = new FileReader();
                rdr.onload = function (e) {
                    $('.change_Edit').attr('src', e.target.result);
                }
                rdr.readAsDataURL(input.files[0]);
            }
        })
    })
</script>

